meta {
  name: [N] Create Full
  type: http
  seq: 2
}

post {
  url: {{HTTP_PROTOCOL}}://{{GATEWAY_URL}}/diet/full
  body: json
  auth: bearer
}

auth:bearer {
  token: {{NUTRITIONIST_ACCESS_TOKEN}}
}

body:json {
  { 
    "name": "Week 2", 
    "patientId": "{{PATIENT_ID}}", 
    "startDate": "2025-09-19T00:00:00.000Z", 
    "endDate": "2026-10-19T00:00:00.000Z", 
    "meals": {{generatedMeals}}
  }
}

script:pre-request {
  bru.setVar("generatedMeals", bru.function("mealsGenerator", [10, 2]));
}

script:post-response {
  if(res.status === 201 && res("id")) {
    bru.setVar("createdDiet" ,res("id"));
  }
  
  if(res.status !== 201) {
      bru.setNextRequest(null);
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
