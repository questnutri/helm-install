meta {
  name: Forgot Password
  type: http
  seq: 3
}

post {
  url: {{HTTP_PROTOCOL}}://{{GATEWAY_URL}}/auth/forgot-password
  body: json
  auth: inherit
}

body:json {
  {
    "email": "{{email}}"
  }
}

vars:pre-request {
  email: {{PATIENT_EMAIL}}
}

vars:post-response {
  RESET_PASSWORD_TOKEN: res("resetPassword")
}

settings {
  encodeUrl: true
  timeout: 0
}
