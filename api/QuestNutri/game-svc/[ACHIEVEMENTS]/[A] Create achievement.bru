vars:pre-request {
  track_id: {{TRACK_ID}}
}

script:post-response {
  if(res.status === 201) {
    bru.setVar("ACHIEVEMENT_ID" , res("id"));
  }
  
  if(res.status !== 201) {
      bru.setNextRequest(null);
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
