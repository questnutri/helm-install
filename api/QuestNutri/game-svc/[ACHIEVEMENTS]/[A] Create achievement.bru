  name: [A] Create achievement
  type: http
  seq: 4
}

post {
  url: {{HTTP_PROTOCOL}}://{{GATEWAY_URL}}/game/achievements
  body: json
  auth: bearer
}

auth:bearer {
  token: {{ADMIN_ACCESS_TOKEN}}
}

body:json {
